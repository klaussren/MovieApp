<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="160dp"
    android:id="@+id/cardViewItemTopRated"
    android:layout_margin="5dp"
    android:background="@color/black"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
 >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--ImageVIew to display our Course Image-->
        <ImageView
            android:id="@+id/ivMovie"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:contentDescription="@string/app_name" />



        <ImageView
            android:id="@+id/ivMovieTopReated"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_star_top_rated"
            />

        <TextView
            android:id="@+id/tvVoteAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/ivMovieTopReated"
            android:text="8.8"
            android:textColor="#F5C40F"
            android:textSize="15sp"

            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMovieTopReated"
            android:layout_marginStart="10dp"
            android:layout_marginRight="5dp"
            android:text="Titulo"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>